<!DOCTYPE html>
<html lang="en">

  <%- include('partials/head.ejs') -%>

<body>
  <div class="container-scroller d-flex">
    <!-- partial:/partials/_sidebar.html -->
    <%- include('partials/sidebar.ejs') -%>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:/partials/_navbar.html -->
      <%- include('partials/header.ejs') -%>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                    <div class="col-10">
                      <h4 class="card-title">Liste du Personnel</h4>                  
                    </div>
                    <div class="col-2">
                      <a class="btn btn-primary" href="/add-person/<%=items[2]%>">Ajouter un utilisateur</a>
                    </div>

                  </div>
                  
                   
                  <p class="card-description">

                  </p>
                  
                  <div class="table-responsive pt-3">
                    <table id="example" style="width:100%;" class="table table-bordered">
                      <thead>
                        <tr>
                          <th>
                            #
                          </th>
                          <th>
                            Nom
                          </th>
                          <th>
                            Nom D'utilisateur
                          </th>
                          <th>
                            Role
                          </th>
                          <th>
                            Email
                          </th>
                          <th>
                            Telephone
                          </th>
                          <th>
                            Genre
                          </th>
                          <th>
                            Actions
                          </th>                                             
                        </tr>
                      </thead>
                      <tbody>
                        <% for(var i=0; i<items[1].length; i++){ %>
                        <tr>
                          <td>
                            <%=i%>
                          </td>
                          <td>
                            <%= items[1][i].u_name%>
                          </td>
                          <td>
                            <%= items[1][i].u_username%>
                          </td>
                          <td>
                            <%= items[1][i].u_role%>
                          </td>
                          <td>
                            <%= items[1][i].u_email%>
                          </td>
                          <td>
                            <%= items[1][i].u_phone%>
                          </td>
                          <td>
                            <%= items[1][i].u_gender%>
                          </td>
                          <td>
                            <div class="d-flex justify-content-center">
                              <div class= "col-5">
                               <a href="/edit-user/<%=items[1][i].u_id%>" type="button" class="btn btn-secondary">
                                 <i class="fa fa-user-edit" style="color:white"></i>
                               </a>
                              </div> 
                            
                              <div class= "col-5">
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#delete-<%=items[1][i].u_id%>">
                                  <i class="fa fa-trash" style="color:white"></i>
                                </button>

                                <!-- Modal -->
                                <div class="modal fade" id="delete-<%=items[1][i].u_id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                  <div class="modal-dialog">
                                    <div class="modal-content">
                                    
                                      <div class="modal-body">
                                        Voulez-vous vraiment supprimer  l'utilisateur <span style="color: red;"> <%= items[1][i].u_name%></span> ?
                                      </div>
                                      <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="color: white;">Fermer</button>
                                        <a href="/delete-user/<%=items[1][i].u_id%>" type="button" class="btn btn-danger" style="color: white;">
                                          Supprimer
                                        </a>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>                              
                           </div>
                          </td>                          
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- content-wrapper ends -->
       
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- base:js -->
  <script src="/vendors/js/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page-->
  <script src="/js/jquery.cookie.js" type="text/javascript"></script>
  <!-- End plugin js for this page-->
  <!-- inject:js -->
  <script src="/js/off-canvas.js"></script>
  <script src="/js/hoverable-collapse.js"></script>
  <script src="/js/template.js"></script>
  <script src="/js/jquery-3.5.1.js"></script>
  <script src="/js/jquery.dataTables.min.js"></script>
  <script src="/js/dataTables.bootstrap5.min.js"></script>
  <script>
    $(document).ready(function () {
    $('#example').DataTable();
    });
  </script>
  <!-- endinject -->
  <!-- End custom js for this page-->
</body>

</html>
